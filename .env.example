# Bluelabel Agent OS - Environment Variables
# Copy this file to .env and update the values as needed

# General
DEBUG=True
LOG_LEVEL=INFO

# Paths
AGENT_ROOT=./agents
PLAN_DIR=./plans
POSTBOX_DIR=./postbox
LOG_DIR=./logs

# Agent Configuration
DEFAULT_AGENT=ARCH
MAX_RETRIES=3
RETRY_DELAY=5  # seconds

# Logging
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=bluelabel_agent_os.log

# Optional: External Services
# SLACK_WEBHOOK_URL=
# DISCORD_WEBHOOK_URL=

# API_KEYS
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
